VERSION = 1.7a

distfile := Joyride-$VERSION.zip

built_dist_files :=
  src/joyride.prg
  src/joyride.d64
  src/joyride.d81

dist_files :=
  README.md
  NEWS.md
  screenshot.png
  $built_dist_files


rule zip
  command = rm -f $out; zip -9jq $out $in && (d=$$(pwd); cd $top_source_directory && zip -9rq $$d/$out Documentation)

build $distfile: zip $dist_files

build dist: phony $distfile

default $built_dist_files

subninja src/build.fninja
